@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentManagement.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
<form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
    <ul class="nav navbar-nav">
        <li class="nav-link">Hello, @User.Identity.Name!</li>
        <li class="nav-link"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
</form>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            @*@Html.ActionLink("Sign Up", "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink"})*@
            <a class="nav-link" id="registerLink" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li>
            @*@Html.ActionLink("Sign In", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })*@
            <a class="nav-link" id="loginLink" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    </ul>
    
}